<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gene.information.dao.ProductPaperDao">

	<select id="get" resultType="com.gene.information.domain.ProductPaperDO">
		select `id`,`product_id`,`paper_id`,`create_time` from biz_product_paper where id = #{value}
	</select>

	<select id="list" resultType="com.gene.information.domain.ProductPaperDO">
		select `id`,`product_id`,`paper_id`,`create_time` from biz_product_paper
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="paperId != null and paperId != ''"> and paper_id = #{paperId} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from biz_product_paper
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="paperId != null and paperId != ''"> and paper_id = #{paperId} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.gene.information.domain.ProductPaperDO" useGeneratedKeys="true" keyProperty="id">
		insert into biz_product_paper
		(
			`product_id`, 
			`paper_id`, 
			`create_time`
		)
		values
		(
			#{productId}, 
			#{paperId}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.gene.information.domain.ProductPaperDO">
		update biz_product_paper 
		<set>
			<if test="productId != null">`product_id` = #{productId}, </if>
			<if test="paperId != null">`paper_id` = #{paperId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from biz_product_paper where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from biz_product_paper where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>